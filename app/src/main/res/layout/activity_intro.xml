                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Cart"
                            android:textAlignment="center"
                            android:textColor="#34346e"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>

